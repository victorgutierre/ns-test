html
  height 100%
  font-size 100%

body
  position relative
  height 100%
  font-family sans-serif
  font-weight 300
  line-height 1

*, *:before, *:after
  padding 0
  margin 0
  box-sizing border-box
  -webkit-font-smoothing antialiased

a
  color inherit
  text-decoration none
  cursor pointer
  outline 0
  word-wrap break-word
  transition all 150ms ease
ul
  list-style none
object
  display none

/* debug helper */
pre
  white-space pre-wrap
  word-wrap break-word
  background $dark-grey
  font-family monospace


.home
  margin 80px 0 40px
  
.home-bag-icon
  display block
  position absolute
  top -60px
  right 40px
  width 33px
  height 40px
  cursor pointer
  background-position 0 0
  background-image url('/public/images/bag-icon.png')
  span
    position absolute
    top 60%
    right -10px
    padding 5px 8px
    color $secondary-color
    font-size 14px
    font-weight 500
    border-radius 50%
    background-color $primary-color