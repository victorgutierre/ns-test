.button
  display block
  padding $space
  text-transform uppercase
  text-align center
  font-weight 900
  font-size 14px
  color #fff
  cursor pointer
  background-color #000
  outline 0
  border 1px solid transparent
  transition all .3s

  &.button-primary
    color #fff
    background-color #000
    &:link
    &:visited
      color #fff
      background-color #000
    &:hover
      color #000
      background-color $primary-color
    &:active
      color #000
      background-color $primary-color
      box-shadow inset 0 1px 6px 0 rgba(0 0 0 .15)

  &.button-secondary
    padding 10px $space
    font-size 12px
    border-radius 4px
    color #fff
    background-color #000
    &:link
    &:visited
      color #fff
      background-color #000
    &:hover
      color #000
      background-color $primary-color
    &:active
      color #000
      background-color $primary-color
      box-shadow inset 0 1px 6px 0 rgba(0 0 0 .15)


  // sizes
  &.button-full
    display block
    width 100%
