.bag-summary-item
  display flex
  position relative
  padding 25px 20px
  border-bottom 2px solid #000
  transition all .2s
  &:first-child
    border-top 2px solid #000
    
  &:after
    opacity 0
    visibility hidden
    content ''
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition all .2s
    background-color rgba(0, 0, 0, .7)

  &:hover
    background-color $secondary-color-darker
    .bag-summary-remove-wrapper
      color #fff
      
.bag-summary-remove-wrapper
  position absolute
  color #000
  top 12px
  right 18px
  font-size 16px
  font-weight 700
  cursor pointer
  transition all .2s
      
.bag-summary-item-image
  width 12%
  margin-right $space
  img
    width 100%

.bag-summary-item-content
  width 68%

.bag-summary-item-title
  display block
  width 90%
  margin-bottom 5px
  font-size 14px
  font-weight 700
  line-height 1.2
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.bag-summary-item-info
.bag-summary-item-quantity
  color $light-grey
  font-weight 500
  font-size 13px
  line-height 1.2

.bag-summary-price
  margin-top $space
  font-size 14px
  font-weight 700
  color $primary-color
