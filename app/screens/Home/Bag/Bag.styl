.bag
  position fixed
  padding 50px 0
  width 500px
  height 100%
  top 0
  right 0
  color #fff
  z-index 1
  transform translateX(500px)
  transition all .4s
  background-color $secondary-color

  &.is-open
    transform translateX(0)
    
.bag-title
  display flex
  justify-content center
  text-align center
  margin-bottom 50px

.bag-title-icon-wrapper
  position relative
  vertical-align middle
  margin-right $space

.bag-quantity-in-bag
  position absolute
  top 60%
  padding 5px 8px
  color $secondary-color
  font-size 14px
  font-weight 500
  border-radius 50%
  background-color $primary-color

.bag-title-content
  padding-top 12px
  text-transform uppercase
  font-weight 700
  font-size 24px

.bag-items-wrapper
  height auto
  max-height 320px
  overflow-y scroll

.empty-bag
  display block
  text-align center
  font-size 18px
  font-weight 500 
  
.bag-icon
  display block
  width 33px
  height 40px
  background-position 0 40px
  background-image url('/public/images/bag-icon.png')
  
@media only screen and (max-width 767px)
  .bag
    width 90%
    transform translateX(100%)