.bag
  position fixed
  padding 50px 0
  width 500px
  height 100%
  top 0
  right 0
  color #fff
  z-index 1
  transform translateX(500px)
  transition all .4s
  background-color $secondary-color

  &.is-open
    transform translateX(0)

.bag-title
  display flex
  justify-content center
  text-align center
  margin-bottom 50px

.bag-title-icon-wrapper
  display none

.bag-title-content
  text-transform uppercase
  font-weight 700
  font-size 24px
