.showcase-item
  display block
  max-width 210px
  text-align center
  margin 0 auto 50px
  .button
    visibility hidden
    opacity 0
    margin-top $space
  &:hover
    .button
      visibility visible
      opacity 1

.showcase-item-image
  display block
  margin 0 auto $space
  width 180px
  height 230px
  text-align center

.showcase-item-name
  display block
  min-height 40px
  font-size 14px
  font-weight 500
  line-height 1.3
  margin-bottom $space

.showcase-item-prices
  position relative
  &:before
    content ''
    display block
    position absolute
    width 20px
    height 3px
    top -9px
    left 0
    right 0
    margin 0 auto
    background-color $primary-color

.showcase-item-price-value
  display block
  text-align center
  font-size 28px
  margin-bottom 5px
  span
    font-weight 300
    font-size 14px
    margin 0 3px

.showcase-item-instalments-value
  display block
  min-height 16px
  font-weight 300
  font-size 14px
  color $dark-grey

